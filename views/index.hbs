<div class="container-index">
    <h2>Qué servicio comprar ahora</h2>
    <h5 class="index-title-second">Nuestros servicios ofrecidos para ti</h5>
    <div class="container-index-list-product">
        <div class="row row-cols-1 row-cols-sm-3 row-cols-md-3 row-cols-xl-5 g-4">
            {{#each products as |product|}}
            {{#indexProfile product.maker.id ../currentUser.id}}
            <div class="col">
                <div class="card">
                    <img src="{{product.img}}" class="container-img-product" alt="img">
                    <div class="card-body">
                        <div class="container-product-title">
                            <h6>{{product.title}}</h6>
                        </div>
                        <small class="autor-index">Creado por: {{product.maker.name}}</small>
                    </div>
                    <div class="card">
                        <div class="card-body">
                            <small>A partir de</small>
                            <h4 class="card-text">{{product.price}}€</h4>
                            <div class="d-flex justify-content-between">
                                <a class="card-text align-self-center" href="/details/{{product.id}}"
                                    style="text-decoration: none;">Detalles</a>
                                <div>
                                    <form action="/cart" method="post">
                                        <input type="hidden" name="productId" value="{{product.id}}">
                                        <input type="hidden" name="quanty" value=1>
                                        <button type="submit" class="btn"
                                            style="background-color: transparent; border: none;"><i
                                                class="fa fa-shopping-cart"></i></button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/indexProfile}}
            {{/each}}
        </div>
    </div>
</div>