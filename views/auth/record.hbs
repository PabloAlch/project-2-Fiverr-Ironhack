<div class="container mt-5">
    <div>
        <div class="mb-3">
            <a href="/profile/{{currentUser.id}}" style="text-decoration: none;">Mi cuenta</a> › Mis pedidos
        </div>
        <div class="mb-5">
            <div>
                <h1>Mis pedidos</h1>
            </div>
            <div>
                <div>
                    <h5>Fitrar por fecha</h5>
                </div>
                <div>
                    <form method="get" action="/record/{{currentUser.id}}" class="d-flex">
                        <input type="date" name="date" value="" min="2022-01-01" max="2022-12-31" class="form-control" style="width: 200px;">
                        <button type="submit" class="btn btn-outline-success mx-2" ><i class="fa fa-search" aria-hidden="true"></i></button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-center row">
        <div class="col-md-11 col-xs-1">
            {{#each carts as |cart|}}
            {{#recordFilter cart.userId.id cart.status ../currentUser.id}}
            <div class="card mb-5">
                <div class="card-header">
                    <div>
                        <div>
                            <h6>PEDIDO REALIZADO EL: {{cart.date}}</h6>
                        </div>
                        <div>
                            <h6>TOTAL: {{totalPriceRecord cart.products}}€</h6>
                        </div>
                        <div>
                            <h6>Nº: {{cart.id}}</h6>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    {{#each cart.products as |product|}}
                    <div class="d-flex justify-content-between mb-3">
                        <div class="d-flex">
                            <div class="mx-2 bd-highlight">
                                <img src="{{product.productId.img}}" style="width: 100px; height: 70px" alt="img">
                            </div>
                            <div class="mx-3 d-flex align-self-center">
                                <div class="align-self-center bd-highlight">
                                    {{product.productId.title}}
                                </div>
                                <div class="p-3 align-self-center">
                                    {{product.productId.price}}€
                                </div>
                            </div>
                        </div>
                        <div class="mx-2 align-self-center">
                            <a href="/details/{{product.productId.id}}" class="btn btn-secondary" role="button">Ver tu
                                articulo</a>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
            {{/recordFilter}}
            {{/each}}
        </div>
    </div>
</div>