<div class="d-flex align-items-center flex-column mt-5">
    <div>
        <h2>Unete a Fivver-Ironhack</h2>
    </div>
    <div>
         <span class="input-group-text mb-3" ><i class="fa fa-pencil-square-o fa-5x"></i></span>
    </div>
    <div class="col-8 col-md-7 col-lg-3">
        <form action="/register" method="post">
            <div class="input-group mb-3">
                <span class="input-group-text"><i class="fa fa-user-circle-o fa-fw"></i></span>
                <input type="text" name="name" class="form-control {{#if errors.name }}is-invalid{{/if}}" placeholder="Escribir nombre" value="{{user.name}}">
                {{#if errors.name}}<div class="invalid-feedback">{{ errors.name }}</div>{{/if}}
            </div>

            <div class="input-group mb-3">
                <span class="input-group-text"><i class="fa fa-envelope fa-fw"></i></span>
                <input type="email" name="email" class="form-control {{#if errors.email }}is-invalid{{/if}}" placeholder="Escribir email" value="{{user.email}}">
                {{#if errors.email}}<div class="invalid-feedback">{{ errors.email }}</div>{{/if}}
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text"><i class="fa fa-lock fa-fw"></i></span>
                <input type="password" name="password" class="form-control {{#if errors.password }}is-invalid{{/if}}" placeholder="Escribir contraseÃ±a">
                {{#if errors.password}}<div class="invalid-feedback">{{ errors.password }}</div>{{/if}}
            </div>
            <div class="d-grid">
                <button class="btn btn-success" type="submit">Registrar</button>
            </div>
        </form>
    </div>
</div>